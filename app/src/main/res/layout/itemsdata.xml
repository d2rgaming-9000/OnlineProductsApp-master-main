<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/texttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter updates below"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3D8E5"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/type_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/texttitle"
        android:hint="Item Name"
        android:inputType="textAutoComplete"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3D8E5"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/specifier_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/type_input"
        android:hint="Item Specifier (E.G Apple category product)"
        android:inputType="textAutoComplete"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3D8E5"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/range_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/specifier_input"
        android:hint="Price Range"
        android:inputType="textAutoComplete"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3D8E5"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextFileName"
        android:shadowColor="#FFFFFF"
        android:text="Hello World!"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="#FFFFFF"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editTextTextFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qty_input"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="46dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="enter_file_name"
        android:inputType="textPersonName"
        android:shadowColor="#040303"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/cardview_light_background"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/qty_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/range_input"
        android:hint="Quantity"
        android:inputType="textAutoComplete"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3D8E5"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btnView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnDelete"
        android:layout_centerInParent="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/cart_button_bg"
        android:text="View Data"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qty_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:onClick="_updates"
        android:background="@drawable/cart_button_bg"
        android:text="Update Data"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnUpdate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/cart_button_bg"
        android:text="Delete Data"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btnInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/cart_button_bg"
        android:text="Insert Data"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnInsert"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="34dp"
        app:srcCompat="@android:drawable/btn_radio" />
</RelativeLayout>
